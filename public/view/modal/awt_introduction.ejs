<link rel="stylesheet" href="https://unpkg.com/flowbite@1.5.5/dist/flowbite.min.css" />

<!-- Main modal -->
<!-- data-modal-show="true" -->
<div id="awt_introduction_modal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true"
    class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full">
    <div class="relative w-full h-full max-w-2xl md:h-auto">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 awt-intronduction-modal-bg">
            <!-- Modal header -->
            <div class="flex items-center  justify-between rounded-t ">
                <div class="pb-12 w-full">
                    <img src="uploads/modal/about-us-modal.png" alt="" class="login-image" />
                </div>
            </div>
            <div class="flex items-start items-center justify-between p-5 rounded-t ">
                <!-- <h3 class="text-xl font-semibold text-gray-900 lg:text-2xl dark:text-white"> -->
                <h3 class="text-xl font-semibold text-gray-900 lg:text-2xl dark:text-white w-full text-center">
                    Know more about us
                </h3>
            </div>
            <!-- Modal body -->
            <div class="p-6 space-y-6">
                <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400 w-full text-center">
                    <!-- <span class="icon-material-outline-settings" style=" font-size: 24px;" ></span> -->
                    <i class="fa-solid fa-gear" style=" font-size: 20px;"> </i> 
                    Please watch our official YouTube introductory video
                </p>
            </div>
            <!-- Modal footer -->
            <div class="flex justify-center p-6 space-x-2  rounded-b  w-full">
                <button type="button" id="close_awt_introduction_modal"
                    class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600">Skip</button>
                <button type="button"
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 mr-2 mb-2"
                    id="watch_awt_introduction">Watch</button>

            </div>
        </div>
    </div>
</div>
<script src="https://unpkg.com/flowbite@1.5.5/dist/flowbite.js"></script>
<script>
    const awtIntroductionModalElement = document.getElementById('awt_introduction_modal');
    const awtIntroductionModalOptions = {
        onHide: () => {
            console.log('modal is hidden');
        },
        onShow: () => {
            console.log('modal is shown');
        },
        onToggle: () => {
            console.log('modal has been toggled');
        }
    };
    const awtIntroductionModal = new Modal(awtIntroductionModalElement, awtIntroductionModalOptions);

    addEventListener('load', (event) => {
        if(localStorage.getItem('popState') != 'shown'){
            awtIntroductionModal.show();
        }
    });

    document.getElementById("close_awt_introduction_modal").addEventListener("click", function () {
        awtIntroductionModal.hide();
        localStorage.setItem('popState','shown')
    });

    document.getElementById("watch_awt_introduction").addEventListener("click", function () {
        // const videoLink = 'https://www.youtube.com/watch?v=hwy7K7FJnZ4'; //old
        const videoLink = 'https://youtu.be/bGfhvSySHIw'; //new
        
        window.open(videoLink, '_blank');
        awtIntroductionModal.hide();
        localStorage.setItem('popState','shown')
    });


</script>