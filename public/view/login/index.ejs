<%- include('../includes/head/index.ejs') %>
<style >
.h-35px {
    height: 35px;
}

.login-image {
    width: 1000px;
    height: 150px;
}
</style>
    <body>
            
        <div id="wrapper" class="flex flex-col justify-between h-screen">
            <!-- nav -->
            <nav class="bg-white px-2 sm:px-4 py-2.5 dark:bg-gray-900 fixed w-full z-20 top-0 left-0 border-b border-gray-200 dark:border-gray-600">
                <div class=" flex flex-wrap justify-between items-center mx-auto">
                <img src="" class="h-35px" id="navLogo" alt="All World Trade" />
                <div class="flex md:order-2">
                    <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-3 md:mr-0 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 orbitron" onclick="lookingForSmallScaleCompany()" >Register</button>
                </div>
                <div class="hidden justify-between items-center w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
                  <ul class="flex flex-col p-4 mt-4 bg-gray-50 rounded-lg border border-gray-100 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                    
                  </ul>
                </div>
                </div>
            </nav>

  

            <!-- Content-->
            <div class="mt-12">
                <div class="lg:p-12 max-w-xl lg:my-0 my-12 mx-auto p-6 space-y-">
                    <div class="pb-12">
                        <img src="uploads/logo/rectangle-logo2.png" alt="" class="login-image" />
                    </div>
                    <form
                        action="javascript:void(0);"
                        method="POST"
                        id="formLogin"
                        name="formLogin"
                        enctype="multipart/form-data"
                        accept-charset="utf-8"
                        class="lg:p-10 p-6 space-y-3 relative bg-white2 shadow-xl rounded-md"
                    >
                        <h1 class="lg:text-2xl text-xl font-semibold mb-6 orbitron">Login</h1>
                        <div>
                            <label class="mb-0 orbitron"> Email Address </label>
                            <input
                                type="email"
                                placeholder="info@example.com"
                                class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full orbitron"
                                id="loginEmailAddress"
                                name="loginEmailAddress"
                            />
                        </div>
                        <div>
                            <label class="mb-0 orbitron"> Password </label>
                            <input
                                type="password"
                                placeholder=""
                                class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full orbitron"
                                id="loginPassword"
                                name="loginPassword"
                            />
                        </div>
                        <div>
                            <button
                                type="submit"
                                class="bg-blue-600 font-semibold p-2 mt-5 rounded-md text-center text-white w-full orbitron"
                            >
                                Login
                            </button>
                        </div>
                        <a href="#" class="block text-center pb-4 font-medium text-blue-500 orbitron" onclick="goToForgotPasswordPage();"> Forgot password. </a>
     
                    </form>
                </div>
            </div>

            <!-- Footer -->
            <%- include('../includes/footer/index.ejs') %>
        </div>
        <script >
            let ourGenerateNonce = `<%= data.ourGenerateNonce %>`;
            console.log('ourGenerateNonce: ', ourGenerateNonce);
        </script>
       
        <script  src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.3.0/sweetalert2.min.js"></script>
        <%- include('../includes/scripts/index.ejs') %>
        <script  src="assets/js/login.js"></script>
        <script >
            function goToForgotPasswordPage () {
              location.replace(host + '/forgot-password');
            }
        </script>
    </body>
</html>
